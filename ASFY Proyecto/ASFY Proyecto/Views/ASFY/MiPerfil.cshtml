@using ASFY_Proyecto.Models;
@{
    ViewBag.Title = "MiPerfil";
    Usuarios usuarioLogueado = null;

    if ((Session["USUARIO"]) != null)
    {
        usuarioLogueado = ((Usuarios)(Session["USUARIO"]));
    }
    else
    {
        usuarioLogueado = new Usuarios();
    }

}



<br>
<br>
<br>
<div class="container">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/Content/Persona IMG 1.jpg" alt="Admin" class="rounded-circle" width="163">
                            <div class="mt-3">
                                <h4> @usuarioLogueado.Nombre </h4>
                                <p class="text-secondary mb-1">Estudiante</p>
                                <p class="text-muted font-size-sm">Buenos Aires, Capital, Argentina</p>
                                <button class="btn btn-outline-secondary">Editar</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nombre </h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @usuarioLogueado.Nombre
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Apellido</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @usuarioLogueado.Apellido
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @usuarioLogueado.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Fecha de nacimiento</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">

                                @usuarioLogueado.FechaDeNacimiento
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Sexo</h6>
                            </div>
                            <div class="dropdown">
                                <select class="form-control border-warning dropbtn" id="dropdownMenuButton">
                                    <option class="dropdown-item">Elegir</option>
                                    <option class="dropdown-item" @(usuarioLogueado.Sexo == "F" ? "selected='selected'" :  "") >F</option>
                                    <option class="dropdown-item" @(usuarioLogueado.Sexo == "M" ? "selected='selected'" :  "")>M</option>
                                    <option class="dropdown-item" @(usuarioLogueado.Sexo == "OTRO" ? "selected='selected'" :  "")>OTRO</option>
                                </select>

                            </div>
                           
                        </div>
                        
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Dirección</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @usuarioLogueado.Direccion
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br>
        </div>

        <br />
        <br>
        <button type="button" class="btn btn-secondary"> @Html.ActionLink("Calendario", "Calendario", "ASFY")</button>

    </div>
</div>

<br>
<br>